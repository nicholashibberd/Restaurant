<% content_for :header_tag do %>
<h1>Add new testimonial</h1>
<% end %>

<div class="content_unit">
	<div class="heading">
		<h3 class="heading">Add new testimonial</h3>
		<p class="help_text">Enter the details below and click to save</p>
	</div>	

	<div class="user_input">
		<% form_for(@testimonial) do |f| %>
		<div class="field">
			<%= f.label :Name %><br />
			<%= f.text_field :name %><br />  
		</div>
		<div class="field">
			<%= f.label :Testimonial %><br />
			<%= f.text_area :testimonial, :cols => '72' %><br />  
		</div>
		<div class="actions save">
			<%= f.submit "Save" %>
		</div>
		<% end %>
	</div>
</div>