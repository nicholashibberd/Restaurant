<h1>Add new testimonial</h1>
<div class="content_unit">
	<div class="user_input">
		<% form_for(@testimonial) do |f| %>
		<div class="field">
			<%= f.label :Name %><br />
			<%= f.text_field :name %><br />  
		</div>
		<div class="field">
			<%= f.label :Testimonial %><br />
			<%= f.text_area :testimonial, :style => 'width: 700px; height: 200px' %><br />  
		</div>
		<div class="update_button">
			<%= f.submit "Save", :class => 'wide' %>
		</div>
		<% end %>
</div>